generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserEMails {
  userEMail         String    @id @db.VarChar(256) @map("user_email")
  userName          String    @db.VarChar(256) @map("user_name")
  createdAt         DateTime  @db.Timestamp(6)  @map("created_at")

  @@map("user_emails")
}

model SubmittedBadges {
  userEMail         String    @db.VarChar(256) @map("user_email")
  submittedAt       DateTime  @db.Timestamp(6) @map("submitted_at") 
  badgeName         String    @db.VarChar(256) @map("badge_name")
  badgeClassId      String    @map("badge_class_id")
  badgeEMail        String    @db.VarChar(256) @map("badge_email")
  badgeIssuerName   String    @map("badge_issuer_name")
  badgeData         Bytes     @map("badge_data")

  @@id([userEMail, submittedAt, badgeClassId])
  @@map("submitted_badges")
}
